# Perplexity AI API (https://www.perplexity.ai/api)
PERPLEXITY_API_KEY=pplx_your_api_key_here

# Stripe Payments (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/webprojekte

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_FROM_NAME=Webprojekte Verkauf System

# S3-Compatible Storage (for bundles)
S3_ENDPOINT=https://your-endpoint.com
S3_BUCKET=webprojekte-bundles
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=eu-central-1

# Application Settings
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Optional: OpenAI Fallback (if Perplexity fails)
OPENAI_API_KEY=sk-your-openai-key-here

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGIN=http://localhost:3000
